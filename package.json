{
  "name": "pitometer-ui",
  "version": "1.0.0",
  "description": "Standalone Pitometer Service providing an API and a simple Web UI for running tests and generating reports!",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
