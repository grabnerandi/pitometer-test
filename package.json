  },
  "homepage": "https://github.com/pitometer/pitometer-ui#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.1.2",
    "pitometer": "file:../pitometer",
    "pitometer-grader-thresholds": "file:../pitometer-grader-thresholds",
    "pitometer-source-dynatrace": "file:../pitometer-source-dynatrace",
    "pitometer-source-prometheus": "file:../pitometer-source-prometheus",
